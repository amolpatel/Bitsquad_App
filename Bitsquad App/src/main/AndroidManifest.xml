<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bitsquadapp" >

    <application
        android:name="com.example.bitsquadapp.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.bitsquadapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bitsquadapp.LoginScreen"
            android:label="@string/title_activity_login_screen"
            android:parentActivityName="com.example.bitsquadapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.example.bitsquadapp.RegistrationScreen"
            android:label="@string/title_activity_registration_screen"
            android:parentActivityName="com.example.bitsquadapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.example.bitsquadapp.AccountsList"
            android:label="@string/title_activity_accounts_list"
            android:parentActivityName="com.example.bitsquadapp.LoginScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="LoginScreen" />
        </activity>
    </application>

</manifest>
